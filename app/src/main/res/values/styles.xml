<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
        parent="Theme.AppCompat.Light.NoActionBar">

        <!--<item name="android:colorPrimary">#FFEB3B</item>-->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionMenuTextColor">#000000</item>
        <item name="android:textColorPrimary">#FFF</item>

        <!-- Support library compatibility -->
        <!--<item name="colorPrimary">#ffeb3b</item>-->
        <item name="colorPrimary">#D7CDCC</item>
        <item name="colorPrimaryDark">#E4AD4F</item>
        <item name="colorAccent">#ffeb3b</item>

        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionMenuTextColor">#000000</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#ffe822</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>

        <!-- Support library compatibility -->
        <item name="background">@color/foo</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#000000</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>
</resources>

